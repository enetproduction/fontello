{
  "name": "@enp/fontello",
  "version": "1.0.0",
  "description": "Fontello font generator",
  "author": "Oskar Lebuda <olebuda@enp.pl>",
  "repository": "https://github.com/enetproduction/fontello",
  "license": "MIT",
  "keywords": [
    "typescript",
    "cli",
    "fontello",
    "font",
    "icon"
  ],
  "main": "./dist/tsc/main.js",
  "types": "./dist/tsc/main.d.ts",
  "bin": {
    "fontello": "./dist/esbuild/cli.js"
  },
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf dist build package",
    "ts-node": "ts-node",
    "docs": "typedoc --entryPoints src/main.ts",
    "build": "tsc -p tsconfig.json",
    "build-all": "yarn clean && yarn build && yarn esbuild-node",
    "esbuild-node": "esbuild src/cli.ts --bundle --platform=node --minify --sourcemap=external --outfile=dist/esbuild/cli.js",
    "esbuild-node:dev": "esbuild src/cli.ts --bundle --platform=node --sourcemap=external --outfile=dist/esbuild/cli.js",
    "esbuild-node:watch": "esbuild src/cli.ts --bundle --platform=node --watch --sourcemap=external --outfile=dist/esbuild/cli.js"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.4.34",
    "@types/mkdirp": "^1.0.2",
    "@types/needle": "^2.5.2",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "esbuild": "^0.14.11",
    "eslint": "^8.6.0",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.9",
    "commander": "^8.3.0",
    "mkdirp": "^1.0.4",
    "needle": "^3.0.0"
  }
}
